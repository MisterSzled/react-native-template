{
        "extends": "expo/tsconfig.base",
        "compilerOptions": {
                "strict": true,
                "paths": {
                        "@/*": [
                                "./*"
                        ],
                        "@src/*": [
                                "./src/*"
                        ]
                },
                "types": [
                        "tamagui"
                ],
                "allowImportingTsExtensions": true
        },
        "include": [
                "**/*.ts",
                "**/*.tsx",
                ".expo/types/**/*.ts",
                "expo-env.d.ts",
                "_config/tamagui/tamagui.d.ts"
        ]
}